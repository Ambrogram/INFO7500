# Environment Variables Template
# Copy this file to .env and update with your actual values

# Bitcoin RPC Configuration
BITCOIN_RPC_URL=http://127.0.0.1:8332
BITCOIN_RPC_USER=bitcoinrpc
BITCOIN_RPC_PASSWORD=your_secure_password_here

# OpenAI API Configuration (optional, for enhanced SQL generation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Database Configuration
DATABASE_PATH=../data/btc.db
DATABASE_BACKUP_PATH=../data/backups/

# ETL Configuration
ETL_BATCH_SIZE=100
ETL_MAX_BLOCKS=100000
ETL_DELAY_SECONDS=0.1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=etl_sync.log

# Test Configuration
TEST_TIMEOUT_SECONDS=30
TEST_MAX_RETRIES=3

# Performance Configuration
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_SECONDS=30

# Security Configuration
ENABLE_SQL_VALIDATION=true
ENABLE_QUESTION_VALIDATION=true
MAX_RESULTS_PER_QUERY=10000 